# Fuel Backend Environment Configuration
# Copy this to .env and customize for your environment

# Server
HOST=0.0.0.0
PORT=8000

# Database (SQLite for dev, PostgreSQL recommended for production)
DATABASE_URL=sqlite:///./fuel.db
# DATABASE_URL=postgresql://user:password@localhost/fuel

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-secret-key-in-production-min-32-characters

# Token expiration (in minutes) - default is 7 days
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Environment
ENVIRONMENT=development

# CORS Origins (comma-separated, or * for all)
CORS_ORIGINS=*

